<Window x:Class="TeamOOP.CreateStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateStudentWindow" Height="360" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Margin="0, 0, 0 , 10">First Name:</TextBlock>
            <TextBox Name="firstNameInput"></TextBox>
            <TextBlock Margin="0, 15, 0 , 10">Last Name:</TextBlock>
            <TextBox Name="lastNameInput"></TextBox>
            <TextBlock Margin="0, 15, 0 , 10">EGN:</TextBlock>
            <TextBox Name="egnInput"></TextBox>
            <TextBlock Margin="0, 15, 0 , 10">Faculty Number:</TextBlock>
            <TextBox Name="facultyInput"></TextBox>
            <Canvas Width="260" Height="45" Margin="0, 20, 0, 0">
                <Border Height="45" Background="#d7d7d7" BorderBrush="#d7d7d7" MouseUp="addStudent_MouseUp" MouseEnter="addStudent_MouseEnter" MouseLeave="addStudent_MouseLeave" Name="addBtn" Cursor="Hand">
                    <DockPanel Width="260" Canvas.Top="10">
                        <TextBlock FontSize="14"  Foreground="#555555" VerticalAlignment="Center" HorizontalAlignment="Center">Add Student</TextBlock>
                    </DockPanel>
                </Border>
            </Canvas>
        </StackPanel>
    </Grid>
</Window>
