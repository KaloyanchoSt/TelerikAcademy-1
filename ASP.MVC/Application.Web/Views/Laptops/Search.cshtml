@model IEnumerable<Application.Web.Models.LaptopViewModel>

@{
    ViewBag.Title = "Search Result";
}

<h2>@ViewBag.Title</h2>

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var laptop = Model.ElementAt(i);
        <div class="col-md-4">
            <h2>@laptop.Manufacturer @laptop.Model</h2>
            <img src="@laptop.ImageUrl" alt="Alternate Text" />
            <br />
            <a class="btn btn-default" href="@Url.Action("Details", "Laptops", new { laptop.Id})">Price: @laptop.Price</a>
        </div>
        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
            @:<div class="row-fluid">
    }
    }
</div>